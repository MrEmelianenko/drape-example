<div class="page-header">
  <h2>Create New Post</h2>
</div>

<%= form_for(Post.new) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>